<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/go_to_plain_activity"
        android:text="@string/go_to_plain_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="@string/go_to_data_binding_sample1"
        android:id="@+id/go_to_bind_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="@string/go_to_data_binding_sample2"
        android:id="@+id/go_to_bind_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>